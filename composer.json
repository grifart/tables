{
    "name": "grifart/tables",
    "description": "Statically typed table gate with support for composite fields, arrays and more from PostgreSQL.",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Jan Kucha≈ô",
            "email": "honza.kuchar@grifart.cz"
        }
    ],


    "scripts": {
        "verify": [
            "@phpstan",
            "@test"
        ],
        "phpstan": "phpstan analyze --no-interaction -l max --error-format compact src tests",
        "test": "tester tests"
    },


    "require": {
        "php": "^8.0",
        "dibi/dibi": "^4.0.2",
        "grifart/scaffolder": "^0.6.0",
        "lstrojny/functional-php": "^1.17",
        "nette/utils": "^3.0.1"
    },
    "require-dev": {
        "brick/date-time": "^0.3.2",
        "grifart/phpstan-oneline": "^0.4.0",
        "nette/tester": "^2.3",
        "nikic/php-parser": "^4.13",
        "phpstan/phpstan": "^0.12"
    },

    "suggest": {
		"brick/date-time": "if you want to use date-time types"
	},


    "autoload": {
        "psr-4": {
            "Grifart\\Tables\\": "src/"
        },
        "classmap": [
            "src/exceptions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Grifart\\Tables\\Tests\\": "tests/"
        },
        "files": [
            "src/exceptions.php"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
