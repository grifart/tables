{
    "name": "grifart/tables",
    "description": "Statically typed table gate with support for composite fields, arrays and more from PostgreSQL.",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Jan Kucha≈ô",
            "email": "honza.kuchar@grifart.cz"
        }
    ],


    "scripts": {
        "verify": [
            "@phpstan",
            "@test"
        ],
        "phpstan": "vendor/bin/phpstan analyze --no-interaction -l max --error-format compact src",
        "test": "vendor/bin/tester src"
    },


    "require": {
        "php": "^7.4",
        "dibi/dibi": "^4.0.2",
        "grifart/class-scaffolder": "^0.2.0|^0.3.0",
        "nette/utils": "^3.0.1"
    },
    "require-dev": {
        "nette/tester": "^2.3",
        "grifart/phpstan-oneline": "^0.2.2",
        "phpstan/phpstan": "^0.11.17"

    },


    "autoload": {
        "psr-4": {
            "Grifart\\Tables\\": "src"
        },
        "classmap": [
            "src/exceptions.php"
        ]
    },
    "autoload-dev": {
        "files": [
            "src/exceptions.php"
        ]
    },


    "repositories": [
        {
            "type": "vcs",
            "url": "git@gitlab.grifart.local:grifart/class-scaffolder.git"
        }
    ]
}
